{
  "manifest_version" : 2,
  "name" : "screenshot extension",
  "version" : "0.1",
  "content_scripts" : [

    {
      "matches" : [
        "<all_urls>"
      ],

      "js" : ["content.js"]

    }
  ],
  "background": {
    "js" : ["background.js"]
  },
  "browser_action" : {
    "default_popup": "popup.html",
    "default_title" : "A popup will come here."
  }

}
